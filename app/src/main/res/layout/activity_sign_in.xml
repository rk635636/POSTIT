<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:background="@drawable/abc"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/logo"
                    android:src="@drawable/image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp" />

                <EditText
                    android:id="@+id/field_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.72"
                    android:background="@drawable/border_edit"
                    android:drawableLeft="@drawable/ic_email_white_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_email"
                    android:textColor="#FFFFFF"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColorHint="#FFFFFF"
                    android:layout_below="@+id/logo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp" />

                <EditText
                    android:id="@+id/field_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edit"
                    android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="start"
                    android:gravity="left|center_vertical"
                    android:hint="Password"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColorHint="#FFFFFF"
                    android:layout_below="@+id/field_email"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/button_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_border"
                    android:layout_below="@+id/field_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_border"
                    android:layout_below="@+id/button_sign_in"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forget Password ?"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:id="@+id/forget_pass"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>