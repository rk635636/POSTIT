<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:background="@drawable/abc"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/logo"
                    android:src="@drawable/image"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:id="@+id/field_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.72"
                    android:background="@drawable/border_edit"
                    android:drawableLeft="@drawable/ic_email_white_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#FFFFFF"
                    android:layout_above="@+id/field_password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/field_password1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edit"
                    android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="start"
                    android:gravity="left|center_vertical"
                    android:hint="Confirm Password"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_above="@+id/button_sign_up"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/field_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_edit"
                    android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="start"
                    android:gravity="left|center_vertical"
                    android:hint="Password"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColorHint="#FFFFFF"
                    android:layout_above="@+id/field_password1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/button_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_border"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>